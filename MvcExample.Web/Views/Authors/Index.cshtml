@model AuthorsIndexViewModel

@{
    ViewData["Title"] = "Authors";
}

<h2>Authors</h2>

<a asp-controller="Authors" asp-action="Create" class="btn btn-success">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
            </tr>
        }
    </tbody>
</table>